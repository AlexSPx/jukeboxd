---
import ThemeToggle from '../ToggleTheme';
import Logo from './logo.astro';
import UserHeader from './UserHeader';
---

<header class="w-full container mx-auto p-3 h-16">
    <div class="w-full flex items-center justify-between">
      <h1 class="flex items-center no-underline hover:no-underline font-bold text-2xl lg:text-4xl">
        <a href="/">
          <Logo />
        </a>
      </h1>
      <section class="flex">
        <UserHeader client:idle/>
